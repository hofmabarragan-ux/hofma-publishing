---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const posts = allPosts.sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime());
---

<Layout
	title="Blog | Hofma Publishing"
	description="News, updates, and insights from Hofma Publishing."
>
	<article class="page-content">
		<div class="section-inner">
			<h1>Blog</h1>
			<p class="section-intro">News, updates, and insights from Hofma Publishing.</p>
			<ul class="posts-list">
				{posts.map((post) => (
					<li class="post-card">
						<article>
							{post.data.coverImage && (
								<a href={`/blog/${post.id}/`} class="post-cover-link">
									<img src={post.data.coverImage} alt="" class="post-cover" />
								</a>
							)}
							<time datetime={post.data.pubDate}>{new Date(post.data.pubDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
							<h3><a href={`/blog/${post.id}/`}>{post.data.title}</a></h3>
							<p>{post.data.description}</p>
							<a href={`/blog/${post.id}/`} class="read-more">Read more â†’</a>
						</article>
					</li>
				))}
			</ul>
		</div>
	</article>
</Layout>

<style>
	.page-content {
		padding: var(--space-2xl) var(--space-lg);
	}

	.section-inner {
		max-width: 720px;
		margin: 0 auto;
	}

	.page-content h1 {
		margin: 0 0 var(--space-sm);
	}

	.section-intro {
		color: var(--color-text-muted);
		margin: 0 0 var(--space-xl);
	}

	.posts-list {
		list-style: none;
		margin: 0;
		padding: 0;
		display: flex;
		flex-direction: column;
		gap: var(--space-xl);
	}

	.post-card {
		padding-bottom: var(--space-xl);
		border-bottom: 1px solid var(--color-border);
	}

	.post-card:last-child {
		border-bottom: none;
		padding-bottom: 0;
	}

	.post-cover-link {
		display: block;
		margin-bottom: var(--space-sm);
	}

	.post-cover {
		width: 100%;
		border-radius: 4px;
	}

	.post-card time {
		font-size: 0.875rem;
		color: var(--color-text-muted);
	}

	.post-card h3 {
		margin: var(--space-xs) 0 var(--space-sm);
	}

	.post-card h3 a {
		color: var(--color-text);
	}

	.post-card h3 a:hover {
		color: var(--color-accent);
	}

	.post-card p {
		margin: 0 0 var(--space-sm);
		color: var(--color-text-muted);
	}

	.read-more {
		font-weight: 600;
	}
</style>
